#!/usr/bin/env bash

cd "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.." || exit 1

clean_clowder_repo() {
    echo "Cleaning clowder build files"
    echo "Removing clowder_repo.egg-info"
    sudo -H rm -rf clowder_repo.egg-info
    echo "Removing dist"
    sudo -H rm -rf dist
    # echo "Removing build"
    # sudo -H rm -rf $clowder_path/build
    echo "Removing __pycache__"
    sudo -H rm -rf clowder/__pycache__ clowder/*/__pycache__ clowder/*/*/__pycache__
    sudo -H rm -rf tests/__pycache__ tests/*/__pycache__ tests/*/*/__pycache__
    echo "pip3 uninstall clowder"
    sudo -H pip3 uninstall clowder-repo || true
}
clean_clowder_repo
