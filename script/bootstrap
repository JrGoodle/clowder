#!/usr/bin/env bash

set -euo pipefail
cd "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

# shellcheck disable=SC1091
. 'script/utils.sh'

h1 "Running bootstrap script for ${PLATFORM}"

case "$PLATFORM" in
    linux)
        h2 'Update apt-get'
        run sudo apt-get update -y
        h2 'Install git'
        run sudo apt-get install python-dev -y
        h2 'Install git-lfs'
        run sudo curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | sudo bash
        run sudo apt-get install git-lfs
        h2 'Install pipenv'
        run pip install -U pipenv
        ;;
    darwin)
        h2 'Install Hombrew if necessary'
        if which -s brew; then
            o '* Homebrew already installed! Updating...'
            run brew update
        else
            o '* Homebrew not found. Installing...'
            run ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
        fi
        h2 'Install Homebrew formulas'
        run brew bundle
        ;;
    windows)
        exit_failure 'Windows is not currently supported'
        ;;
esac

h2 'Upgrade pip'
run pip install --upgrade pip
