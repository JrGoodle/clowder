#!/usr/bin/env bash

case "$(uname)" in
    Linux*) export MY_PLATFORM="linux";
        # sudo apt-get update
        # sudo apt-get install -y python3-setuptools
        # sudo apt-get install -y python3-pip
        ;;
    Darwin*) export MY_PLATFORM="osx";
        # brew update
        brew install python
        brew upgrade python
        ;;
    CYGWIN*) export MY_PLATFORM="windows";
        ;;
esac

echo $MY_PLATFORM
